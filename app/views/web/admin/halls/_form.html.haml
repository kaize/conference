= simple_form_for [:admin, @hall], html: { class: 'form-horizontal hall-form' } do |f|
  .row
    .span8.well
      = f.input :name, input_html: { class: 'span8' }

  %h3= t '.timeslots'
  #slots
    = f.simple_fields_for :slots do |slot|
      = render 'slot_fields', f: slot
  #links
    .control-group
      = link_to_add_association t('.add_slot'), f, :slots, class: "btn", data: { association_insertion_node: '#slots', association_insertion_method: 'append' }
  .row
    .span8.well
      = f.button :submit, class: 'btn btn-primary'
      = link_to t('.cancel'), admin_halls_path, class: 'btn'

