= simple_form_for [:admin, @user], html: { class: 'form-horizontal' } do |f|
  = f.input :first_name, input_html: { class: 'input-block-level' }
  = f.input :last_name, input_html: { class: 'input-block-level' }
  = f.input :state_event, as: :state_event, input_html: { class: 'input-block-level' }
  = f.input :city, input_html: { class: 'input-block-level' }
  = f.input :company, input_html: { class: 'input-block-level' }
  = f.input :position, input_html: { class: 'input-block-level' }
  = f.input :about, as: :text, input_html: { cols: 50, rows: 3, class: 'input-block-level' }
  = f.input :show_as_participant, input_html: { class: 'checkbox' }
  = f.input :admin, input_html: { class: 'checkbox' }
  = f.input :role, include_blank: false, input_html: { class: 'input-block-level' }
  = f.input :email, input_html: { class: 'span5' }
  - if @user.new_record?
    = f.input :password, input_html: { class: 'span5' }
    = f.input :password_confirmation, input_html: { class: 'span5' }
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('.cancel'), admin_users_path, class: 'btn'
