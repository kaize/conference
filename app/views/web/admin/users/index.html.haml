.page-header
  %h1=t '.title'

.row
  .span4
    = link_to t('.new'), new_admin_user_path, class: 'btn btn-primary'
%br

%table.table.table-striped
  %thead
    %tr
      %th= t('.id')
      %th= t('.first_name')
      %th= t('.last_name')
      %th= t('.role')
      %th
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.first_name
        %td= user.last_name
        %td= user.role_text
        %td
          .pull-right.btn-group
            = link_to edit_admin_user_path(user), class: 'btn btn-mini' do
              %i.icon-pencil

